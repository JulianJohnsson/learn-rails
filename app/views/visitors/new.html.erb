<% content_for :title do %>Foobar Kadigan<% end %>
<% content_for :description do %>Website of Foobar Kadigan<% end %>
<%= image_tag "1.jpg" %>
<div valign="center" style="text-align: center; margin-top: 20px;">
	<div class="span4 offset2">
		<h2>Stay in touch</h2>
	</div>
	<div class="span4">
		<%= simple_form_for @visitor do |f| %>
			<%= f.error_notification %>
			<%= f.input :email, label: false, :placeholder => 'Your email adress...' %>
			<br/>
			<%= f.submit "Sign Up for the newsletter", :class => "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>

